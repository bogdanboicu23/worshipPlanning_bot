{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd WorshipPlannerBot.Api && dotnet build -c Release"
  },
  "deploy": {
    "startCommand": "cd WorshipPlannerBot.Api && dotnet run --urls http://0.0.0.0:$PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}